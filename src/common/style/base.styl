html,body 
  width 100%
  height 100%
  overflow hidden
textarea
  display block
  width 95%
  height 180px
  border none
  border-bottom 2px solid #ccc
  padding-top 10px
  outline none
  font-size 20px
  margin auto
button
  width 80px
  height 30px
  border none
  outline none
  background #ccc
  margin 10px 15px
  border-radius 5px
  color #333
  &.warn
    background #bb505d
    color #fff
    &:active
      background #ac6767
  &.primary
    background #2468a2
    color #fff
    &:active
      background #2585a6
  &:active
    background #aaa
.checkbox
  display inline-block
  width 18px
  height 18px
  margin 0
  background none
  border none
  box-shadow none
.fade-enter-active, .fade-leave-active
  transition opacity .3s
.fade-enter, .fade-leave-to
  opacity 0
  position absolute
  width 100%

.fade-side-on-enter-active, .fade-side-on-leave-active
  transition all .3s
  top 0
.fade-side-on-enter, .fade-side-on-leave-to
  position absolute
  opacity 0
  width 100%
  height 100%
  transform translateX(300px)

.list-complete-enter, .list-complete-leave-to
  opacity 0
  transform translateY(30px)
.list-complete-leave-active
  position absolute
  width 100%

.btns-fade-enter-active, .btns-fade-leave-active {
  transition: all .3s ease;
}
.btns-fade-enter, .btns-fade-leave-to
/* .component-fade-leave-active for below version 2.1.8 */ {
  opacity 0
  transform scale(0.7)
}
